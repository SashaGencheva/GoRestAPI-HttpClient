<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite">
    <test verbose="2" preserve-order="true"
          name="GoRestAPIwithHTTPClient">
        <classes>
            <class name="tests.PostApiTest">
                <methods>
                    <include name="createUserTest"/>
                </methods>
            </class>
            <class name="tests.PutApiTest">
                <methods>
                    <include name="updateUser"/>
                </methods>
            </class>
            <class name="tests.PatchApiTest">
                <methods>
                    <include name="partiallyUpdateUser"/>
                </methods>
            </class>
            <class name="tests.DeleteApiTest">
                <methods>
                    <include name="deleteUserTest"/>
                </methods>
            </class>
            <class name="tests.GetApiTest">
                <methods>
                    <include name="getUserDetailsTest"/>
                    <include name="getAllUsersTest"/>
                    <include name="getAllUsersParamsTest"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>